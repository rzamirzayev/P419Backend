@model Country

<div class="row">
    <div class="col-12">
        <form method="post">
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Name</label>
                <input class="form-control" asp-for="Name" aria-describedby="nameHelp">
                <div id="nameHelp" class="form-text">We'll never share your email with anyone else.</div>
            </div>
            <div class="mb-3">
                <label asp-for="CountryCode" class="form-label">CountryCode</label>
                <input class="form-control" asp-for="CountryCode" aria-describedby="CountryCodeHelp">
                <div id="CountryCodeHelp" class="form-text">We'll never share your email with anyone else.</div>
            </div>
            <input asp-for="Id" hidden />
            <button type="submit" class="btn btn-primary">Yadda saxla</button>
        </form>
    </div>
</div>
